<%-include('./header.ejs')%>

<!-- ***** Welcome Area Start ***** -->
<div class="welcome-area" id="welcome">

    <!-- ***** Header Text Start ***** -->
    <div class="header-text">
        <div class="container">
            <div class="row">
                <div class="left-text col-lg-6 col-md-12 col-sm-12 col-xs-12"
                    data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                    <% if( typeof message !== 'undefined' && message.length > 0){ %>
                        <div class="alert alert-success">
                            <!-- To Print -->
                            <%= message %>
                        </div>
                        <% } %>
                        <% if(typeof msg !== 'undefined' && msg.length > 0){ %>
                            <div class="alert alert-danger">
                                <!-- To Print -->
                                <%= msg %>
                            </div>
                        <% } %>
                    <h1>Transform today for a Brighter <em>Tomorrow</em></h1>
                    <p>Aims to promote eco-friendly practices,
                         providing resources, tips, and news to inspire individuals and organizations 
                         to adopt sustainable lifestyles and reduce their environmental impact.</p> 
                    <a href="/#about" class="main-button-slider">KNOW US BETTER</a>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Header Text End ***** -->
     
</div>
<!-- ***** Welcome Area End ***** -->

<!-- ***** Features Big Item Start ***** -->
<section class="section" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                <div class="features-item">
                    <div class="features-icon">
                        <!-- <h2>01</h2> -->
                        <img src="/images/Personalised reports.jpg" alt="">
                        <h4>Personalised reports</h4>
                        <p>Stay organized with a Personalized Calendar tailored to your sustainability goals.</p>
                        <a href="#testimonials" class="main-button">
                            Read More
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                <div class="features-item">
                    <div class="features-icon">
                        <!-- <h2>02</h2> -->
                        <img src="/images/Event calendar.jpg" alt="">
                        <h4>Event calendar</h4>
                        <p>Discover upcoming eco-events and activities in our Event Calendar.</p>
                        <a href="#testimonials" class="main-button">
                            Discover More
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                data-scroll-reveal="enter right move 30px over 0.6s after 0.4s">
                <div class="features-item">
                    <div class="features-icon">
                        <!-- <h2>03</h2> -->
                        <img src="/images/Carbon Footprint calculator.jpg" alt="">
                        <h4>Carbon Footprint calculator</h4>
                        <p>Estimate your environmental impact using our Carbon Footprint Calculator.</p>
                        <a href="https://www.carbonfootprint.com/calculator.aspx" class="main-button">
                            More Detail
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Features Big Item End ***** -->

<div class="container calendar-background">
    <div class="container">
        <h1 class="text-center my-4">Event Calendar</h1>
        <div id="month-name" class="text-center mb-4"></div>
        <div id="calendar" class="calendar-row row justify-content-center"></div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="js/eventCalendar.js"></script>
</div>

<div class="left-image-decor"></div>

<!-- ***** Features Big Item Start ***** -->
<section class="section" id="promotion">
    <div class="container">
        <div class="row">
            <div class="left-image col-lg-5 col-md-12 col-sm-12 mobile-bottom-fix-big"
                data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                <img src="/images/img2.png" class="rounded img-fluid d-block mx-auto" alt="App">
            </div>
            <div class="right-text offset-lg-1 col-lg-6 col-md-12 col-sm-12 mobile-bottom-fix">
                <ul>
                    <li data-scroll-reveal="enter right move 30px over 0.6s after 0.4s">
                        <img src="/images/about-icon-01.png" alt="">
                        <div class="text">
                            <h4>connect with communities</h4>
                            <p>Connect with like-minded individuals, share ideas, and collaborate on sustainable initiatives in our community section.</p>
                        </div>
                    </li>
                    <li data-scroll-reveal="enter right move 30px over 0.6s after 0.5s">
                        <img src="/images/about-icon-02.png" alt="">
                        <div class="text">
                            <h4>know about government policies</h4>
                            <p>Learn about our guidelines and expectations in the Community Policy section..</p>
                        </div>
                    </li>
                    <li data-scroll-reveal="enter right move 30px over 0.6s after 0.6s">
                        <img src="/images/about-icon-03.png" alt="">
                        <div class="text">
                            <h4>track your progress</h4>
                            <p>Monitor your eco-friendly efforts and achievements in the Track Your Progress section.</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- ***** Features Big Item End ***** -->

